{
	"manifest_version": 1,
	"type": "WebApp",
	"meta": {
		"name": "Firestone",
		"author": "SÃ©bastien Tromp",
		"version": "@app-version@",
		"minimum-overwolf-version": "0.141.0.13",
		"description": "A Hearthtone companion to have in-game the information you need",
		"dock_button_title": "Firestone",
		"icon": "IconMouseOver.png",
		"icon_gray": "IconMouseNormal.png",
		"launcher_icon": "launcher_icon.ico",
		"splash_image": "Splash_icon.png",
		"tray_icon": "tray_icon.ico"
	},
	"permissions": [
		"Logging",
		"GameInfo",
		"FileSystem",
		"Extensions",
		"Profile",
		"Hotkeys",
		"VideoCaptureSettings",
		"DesktopStreaming",
		"Streaming",
		"Clipboard",
		"Tray"
	],
	"disable_dockbutton": false,
	"hide_from_store": false,
	"data": {
		"start_window": "MainWindow",
		"windows": {
			"MainWindow": {
				"file": "Files/background.html",
				"transparent": true,
				"clickthrough": true,
				"resizable": false,
				"show_in_taskbar": false,
				"is_background_page": true,
				"size": { "width": 0, "height": 0 },
				"start_position": { "top": 0, "left": 0 },
				"grab_keyboard_focus": false,
				"grab_focus_on_desktop": false,
				"block_top_window_navigation": true
			},
			"FullScreenOverlaysWindow": {
				"file": "Files/full_screen_overlays.html",
				"transparent": true,
				"resizable": false,
				"show_in_taskbar": false,
				"size": { "width": 300, "height": 720 },
				"start_position": { "top": 0, "left": 0 },
				"grab_keyboard_focus": false,
				"grab_focus_on_desktop": false,
				"block_top_window_navigation": true,
				"in_game_only": true
			},
			"FullScreenOverlaysClickthroughWindow": {
				"file": "Files/full_screen_overlays_clickthrough.html",
				"transparent": true,
				"resizable": false,
				"show_in_taskbar": false,
				"size": { "width": 300, "height": 720 },
				"start_position": { "top": 0, "left": 0 },
				"grab_keyboard_focus": false,
				"grab_focus_on_desktop": false,
				"block_top_window_navigation": true,
				"in_game_only": true
			},
			"LoadingWindow": {
				"file": "Files/loading.html",
				"transparent": true,
				"resizable": false,
				"show_in_taskbar": true,
				"size": { "width": 440, "height": 590 },
				"min_size": { "width": 440, "height": 590 },
				"max_size": { "width": 440, "height": 590 },
				"block_top_window_navigation": true,
				"popup_blocker": true,
				"mute": true
			},
			"NotificationsWindow": {
				"file": "Files/notifications.html",
				"transparent": true,
				"resizable": false,
				"show_in_taskbar": false,
				"size": { "width": 530, "height": 500 },
				"start_position": { "top": 0, "left": 0 },
				"grab_keyboard_focus": false,
				"grab_focus_on_desktop": false,
				"block_top_window_navigation": true,
				"in_game_only": true
			},
			"SettingsOverlayWindow": {
				"file": "Files/settings.html",
				"transparent": true,
				"resizable": false,
				"show_in_taskbar": true,
				"size": { "width": 780, "height": 620 },
				"start_position": { "top": 200, "left": 200 },
				"min_size": { "width": 780, "height": 620 },
				"max_size": { "width": 780, "height": 620 }
			},
			"SettingsWindow": {
				"file": "Files/settings.html",
				"transparent": true,
				"resizable": false,
				"show_in_taskbar": true,
				"native_window": true,
				"use_os_windowing": true,
				"desktop_only": true,
				"topmost": false,
				"disable_hardware_acceleration": true,
				"size": { "width": 780, "height": 620 },
				"start_position": { "top": 200, "left": 200 },
				"min_size": { "width": 780, "height": 620 },
				"max_size": { "width": 780, "height": 620 }
			},
			"CollectionOverlayWindow": {
				"file": "Files/collection.html",
				"transparent": true,
				"resizable": true,
				"show_in_taskbar": true,
				"size": { "width": 1400, "height": 700 },
				"min_size": { "width": 1400, "height": 700 },
				"block_top_window_navigation": true,
				"popup_blocker": true,
				"mute": true
			},
			"CollectionWindow": {
				"file": "Files/collection.html",
				"transparent": true,
				"resizable": true,
				"show_in_taskbar": true,
				"native_window": true,
				"use_os_windowing": true,
				"desktop_only": true,
				"topmost": false,
				"disable_hardware_acceleration": true,
				"size": { "width": 1400, "height": 700 },
				"min_size": { "width": 1400, "height": 700 },
				"block_top_window_navigation": true,
				"popup_blocker": true,
				"mute": true
			},
			"BattlegroundsOverlayWindow": {
				"file": "Files/battlegrounds.html",
				"transparent": true,
				"resizable": true,
				"show_in_taskbar": true,
				"size": { "width": 1320, "height": 720 },
				"min_size": { "width": 1320, "height": 720 },
				"block_top_window_navigation": true,
				"popup_blocker": true,
				"mute": true
			},
			"BattlegroundsWindow": {
				"file": "Files/battlegrounds.html",
				"transparent": true,
				"resizable": true,
				"show_in_taskbar": true,
				"native_window": true,
				"use_os_windowing": true,
				"desktop_only": true,
				"topmost": false,
				"disable_hardware_acceleration": true,
				"size": { "width": 1320, "height": 720 },
				"min_size": { "width": 1320, "height": 720 },
				"block_top_window_navigation": true,
				"keep_window_location": true,
				"popup_blocker": true,
				"mute": true
			},

			"OutOfCardsAuthWindow": {
				"file": "Files/outofcards-callback.html",
				"transparent": true,
				"resizable": false,
				"show_in_taskbar": true,
				"size": { "width": 600, "height": 600 },
				"min_size": { "width": 600, "height": 600 },
				"start_position": { "top": 200, "left": 600 },
				"desktop_only": true
			}
		},
		"game_targeting": {
			"type": "dedicated",
			"game_ids": [9898]
		},
		"force_browser": "user",
		"game_events": [9898],
		"launch_events": [
			{
				"event": "GameLaunch",
				"event_data": {
					"game_ids": [9898]
				},
				"start_minimized": false
			}
		],
		"protocol_override_domains": {
			"googlesyndication": "http"
		},
		"url_protocol": {
			"scheme": "firestoneapp"
		},
		"externally_connectable": {
			"matches": [
				"http://*.overwolf.com",
				"https://*.overwolf.com",
				"http://static.zerotoheroes.com",
				"https://static.zerotoheroes.com",
				"http://*.firestoneapp.com",
				"https://*.firestoneapp.com",
				"http://www.zerotoheroes.com",
				"https://www.googletagmanager.com",
				"https://*.execute-api.us-west-2.amazonaws.com",
				"https://localhost",
				"http://*.amazonaws.com",
				"https://*.amazonaws.com",
				"https://api.twitch.tv",
				"http://*.twitch.tv",
				"https://*.twitch.tv",
				"https://*.outof.cards",
				"https://*.pastebin.com"
			]
		},
		"extra-objects": {
			"overwolf-replay-converter": {
				"file": "Files/plugins/HearthstoneReplays.dll",
				"class": "HearthstoneReplays.ReplayConverterPlugin"
			},
			"mind-vision": {
				"file": "Files/plugins/OverwolfUnitySpy.dll",
				"class": "OverwolfUnitySpy.MindVisionPlugin"
			},
			"ow-utils": {
				"file": "Files/plugins/OwUtils.dll",
				"class": "OwUtils.OwUtilsPlugin"
			}
		},
		"hotkeys": {
			"collection": {
				"title": "Show/hide main window",
				"action-type": "custom",
				"default": "Alt+C"
			},
			"battlegrounds": {
				"title": "Show/hide battlegrounds window",
				"action-type": "custom",
				"default": "Alt+B"
			},
			"live-info": {
				"title": "Show live information (only BG for now)",
				"action-type": "custom",
				"default": "Tab",
				"passthrough": true,
				"hold": true
			}
		},
		"process_name": "Firestone",
		"disable_cleanup": true
	}
}
