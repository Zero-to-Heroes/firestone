{
	"root": true,
	"ignorePatterns": ["**/*"],
	"plugins": ["@nx/eslint"],
	"overrides": [
		{
			"files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
			"rules": {
				"@nx/eslint/enforce-module-boundaries": [
					"off",
					{
						"enforceBuildableLibDependency": true,
						"allow": [],
						"depConstraints": [
							{
								"sourceTag": "*",
								"onlyDependOnLibsWithTags": ["*"]
							}
						]
					}
				]
			}
		},
		{
			"files": ["*.ts", "*.tsx"],
			"extends": ["plugin:@nx/eslint/typescript"],
			"rules": {}
		},
		{
			"files": ["*.js", "*.jsx"],
			"extends": ["plugin:@nx/eslint/javascript"],
			"rules": {}
		},
		{
			"files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
			"env": {
				"jest": true
			},
			"rules": {}
		},
		{
			"files": ["*.ts"],
			"extends": ["plugin:@nx/eslint/angular", "plugin:@angular-eslint/template/process-inline-templates"],
			"rules": {
				"no-extra-boolean-cast": ["off"],
				"@typescript-eslint/member-ordering": ["off"],
				"@angular-eslint/no-output-on-prefix": ["off"],
				"no-restricted-syntax": ["off"]
			}
		},
		{
			"files": "*.json",
			"parser": "jsonc-eslint-parser",
			"rules": {}
		}
	]
}
