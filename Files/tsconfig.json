{
	"compilerOptions": {
		"target": "es5",
		"module": "es2015",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"strictNullChecks": false,
		"removeComments": true,
		"noImplicitAny": false,
		"suppressImplicitAnyIndexErrors": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
		"lib": [
			"dom",
			"es2015"
		],
		"baseUrl": ".",
		"typeRoots": [
			"node_modules/@types"
		],
		"types": [
			"node",
		]
	},
	"exclude": [
    	"node_modules/*",
	]
}
