{
	"name": "mobile",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"projectType": "application",
	"sourceRoot": "apps/mobile/src",
	"prefix": "mobile",
	"targets": {
		"build": {
			"executor": "@angular-devkit/build-angular:browser",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/apps/mobile",
				"index": "apps/mobile/src/index.html",
				"main": "apps/mobile/src/main.ts",
				"polyfills": ["zone.js", "apps/mobile/src/polyfills.ts"],
				"tsConfig": "apps/mobile/tsconfig.app.json",
				"inlineStyleLanguage": "scss",
				"assets": [
					"apps/mobile/src/favicon.ico",
					"apps/mobile/src/assets",
					{
						"input": "libs/shared/assets/src/assets",
						"glob": "**/*",
						"output": "./assets"
					}
				],
				"styles": ["apps/mobile/src/styles.scss", "libs/shared/styles/src/lib/styles/battlegrounds-theme.scss"],
				"scripts": []
			},
			"configurations": {
				"production": {
					"budgets": [
						{
							"type": "initial",
							"maximumWarning": "2mb",
							"maximumError": "5mb"
						},
						{
							"type": "anyComponentStyle",
							"maximumWarning": "6kb",
							"maximumError": "10kb"
						}
					],
					"sourceMap": false,
					"outputHashing": "all",
					"namedChunks": false,
					"extractLicenses": true,
					"vendorChunk": false,
					"buildOptimizer": true
				},
				"development": {
					"buildOptimizer": false,
					"optimization": false,
					"vendorChunk": true,
					"extractLicenses": false,
					"sourceMap": true,
					"namedChunks": true
				}
			},
			"defaultConfiguration": "development"
		},
		"serve": {
			"executor": "@angular-devkit/build-angular:dev-server",
			"configurations": {
				"production": {
					"browserTarget": "mobile:build:production"
				},
				"development": {
					"browserTarget": "mobile:build:development"
				}
			},
			"defaultConfiguration": "development"
		},
		"extract-i18n": {
			"executor": "@angular-devkit/build-angular:extract-i18n",
			"options": {
				"browserTarget": "mobile:build"
			}
		},
		"lint": {
			"executor": "@nx/linter:eslint",
			"options": {
				"lintFilePatterns": ["apps/mobile/**/*.ts", "apps/mobile/**/*.html"]
			}
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "apps/mobile/jest.config.ts",
				"passWithNoTests": true
			}
		},
		"cap": {
			"executor": "nx:run-commands",
			"options": {
				"command": "npx cap",
				"cwd": "apps/mobile"
			}
		},
		"cap:init": {
			"executor": "nx:run-commands",
			"options": {
				"command": "npx cap init FirestoneMobile com.firestoneapp.mobile --web-dir=../../dist/apps/mobile",
				"cwd": "apps/mobile"
			}
		},
		"cap:add:android": {
			"executor": "nx:run-commands",
			"options": {
				"command": "npx cap add android",
				"cwd": "apps/mobile"
			},
			"dependsOn": ["cap:init"]
		},
		"cap:add:ios": {
			"executor": "nx:run-commands",
			"options": {
				"command": "npx cap add ios",
				"cwd": "apps/mobile"
			},
			"dependsOn": ["cap:init"]
		},
		"cap:sync": {
			"executor": "nx:run-commands",
			"options": {
				"command": "npx cap sync",
				"cwd": "apps/mobile"
			},
			"dependsOn": ["build"]
		},
		"cap:open:android": {
			"executor": "nx:run-commands",
			"options": {
				"command": "npx cap open android",
				"cwd": "apps/mobile"
			}
		},
		"cap:open:ios": {
			"executor": "nx:run-commands",
			"options": {
				"command": "npx cap open ios",
				"cwd": "apps/mobile"
			}
		}
	},
	"tags": ["mobile", "capacitor"]
}
