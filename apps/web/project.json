{
	"name": "web",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"projectType": "application",
	"sourceRoot": "apps/web/src",
	"prefix": "web",
	"targets": {
		"build": {
			"executor": "@angular-devkit/build-angular:browser",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/apps/web",
				"index": "apps/web/src/index.html",
				"main": "apps/web/src/main.ts",
				"polyfills": ["zone.js", "apps/web/src/polyfills.ts"],
				"tsConfig": "apps/web/tsconfig.app.json",
				"inlineStyleLanguage": "scss",
				"assets": [
					"apps/web/src/favicon.ico",
					"apps/web/src/assets",
					{
						"input": "libs/shared/assets/src/assets",
						"glob": "**/*",
						"output": "./assets"
					},
					{
						"input": "apps/web/src",
						"glob": "*.html",
						"ignore": ["index.html"],
						"output": "./"
					}
				],
				"styles": [
					"apps/web/src/styles.scss",
					"libs/shared/styles/src/lib/styles/battlegrounds-theme.scss",
					"libs/shared/styles/src/lib/styles/general-theme.scss"
				],
				"scripts": []
			},
			"configurations": {
				"production": {
					"budgets": [
						{
							"type": "initial",
							"maximumWarning": "500kb",
							"maximumError": "5mb"
						},
						{
							"type": "anyComponentStyle",
							"maximumWarning": "2kb",
							"maximumError": "40kb"
						}
					],
					"sourceMap": false,
					"outputHashing": "all",
					"baseHref": "/"
				},
				"development": {
					"buildOptimizer": false,
					"optimization": false,
					"vendorChunk": true,
					"extractLicenses": false,
					"sourceMap": true,
					"namedChunks": true
				}
			},
			"defaultConfiguration": "development"
		},
		"serve": {
			"executor": "@angular-devkit/build-angular:dev-server",
			"options": {
				"buildTarget": "web:build"
			},
			"configurations": {
				"production": {
					"buildTarget": "web:build:production"
				},
				"development": {
					"buildTarget": "web:build:development"
				}
			},
			"defaultConfiguration": "development"
		},
		"extract-i18n": {
			"executor": "@angular-devkit/build-angular:extract-i18n",
			"options": {
				"browserTarget": "web:build"
			}
		},
		"lint": {
			"executor": "@nx/linter:eslint",
			"options": {
				"lintFilePatterns": ["apps/web/**/*.ts", "apps/web/**/*.html"]
			}
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "apps/web/jest.config.ts",
				"passWithNoTests": true
			}
		},
		"deploy": {
			"executor": "nx:run-commands",
			"dependsOn": ["build"],
			"options": {
				"command": "npx tsx ./build-tools/upload-web.ts"
			}
		}
	},
	"tags": []
}
