{
	"name": "electron-frontend",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"projectType": "application",
	"prefix": "app",
	"sourceRoot": "apps/electron-frontend/src",
	"tags": [],
	"targets": {
		"build": {
			"executor": "@angular-devkit/build-angular:browser",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/apps/electron-frontend",
				"index": "apps/electron-frontend/src/index.html",
				"main": "apps/electron-frontend/src/main.ts",
				"polyfills": ["zone.js", "apps/electron-frontend/src/polyfills.ts"],
				"tsConfig": "apps/electron-frontend/tsconfig.app.json",
				"inlineStyleLanguage": "scss",
				"assets": [
					{
						"input": "libs/shared/assets/src/assets",
						"glob": "**/*",
						"output": "./assets"
					},
					{
						"glob": "**/*",
						"input": "apps/electron-frontend/public",
						"output": "./"
					}
				],
				"styles": [
					"apps/legacy/src/styles.scss",
					"libs/shared/styles/src/lib/styles/battlegrounds-theme.scss",
					"libs/shared/styles/src/lib/styles/decktracker-theme.scss",
					"libs/shared/styles/src/lib/styles/general-theme.scss",
					"apps/electron-frontend/src/styles.scss"
				],
				"allowedCommonJsDependencies": [
					"@firestone-hs/build-global-stats/dist/stats-builder",
					"@firestone-hs/hs-replay-xml-parser/dist/public-api",
					"@firestone-hs/hs-replay-xml-parser/dist/lib/model/bgs-face-off",
					"@firestone-hs/reference-data",
					"@firestone-hs/simulate-bgs-battle",
					"@firestone-hs/communities",
					"@tweenjs/tween.js",
					"bezier-easing",
					"deep-equal",
					"deepmerge",
					"jszip",
					"localforage",
					"jsonwebtoken",
					"double-ended-queue",
					"aws-sdk/global",
					"aws-sdk/clients/s3",
					"pako",
					"dom-to-image-more"
				]
			},
			"configurations": {
				"production": {
					"budgets": [
						{
							"type": "initial",
							"maximumWarning": "5000kb",
							"maximumError": "20mb"
						},
						{
							"type": "anyComponentStyle",
							"maximumWarning": "20kb",
							"maximumError": "20mb"
						}
					],
					"outputHashing": "all"
				},
				"development": {
					"optimization": false,
					"extractLicenses": false,
					"sourceMap": true
				}
			},
			"defaultConfiguration": "production"
		},
		"serve": {
			"continuous": true,
			"executor": "@angular-devkit/build-angular:dev-server",
			"configurations": {
				"production": {
					"buildTarget": "electron-frontend:build:production"
				},
				"development": {
					"buildTarget": "electron-frontend:build:development"
				}
			},
			"defaultConfiguration": "development",
			"options": {
				"proxyConfig": "apps/electron-frontend/proxy.conf.json"
			}
		},
		"extract-i18n": {
			"executor": "@angular-devkit/build-angular:extract-i18n",
			"options": {
				"buildTarget": "electron-frontend:build"
			}
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "apps/electron-frontend/jest.config.ts"
			}
		},
		"serve-static": {
			"continuous": true,
			"executor": "@nx/web:file-server",
			"options": {
				"buildTarget": "electron-frontend:build",
				"port": 4200,
				"staticFilePath": "dist/apps/electron-frontend/browser",
				"spa": true
			}
		}
	}
}
